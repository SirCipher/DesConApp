<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:checked="true"
        android:defaultValue="true"
        android:key="@string/setting_background"
        android:summary="@string/settings_background_description"
        android:title="@string/settings_background_title" />

    <EditTextPreference
        android:key="@string/setting_volts_div"
        android:numeric="decimal"
        android:summary="@string/setting_volts_div_description"
        android:title="@string/setting_volts_div_title" />

    <EditTextPreference
        android:key="@string/setting_time_div"
        android:numeric="decimal"
        android:summary="@string/setting_time_div_description"
        android:title="@string/setting_time_div_title" />

</PreferenceScreen>